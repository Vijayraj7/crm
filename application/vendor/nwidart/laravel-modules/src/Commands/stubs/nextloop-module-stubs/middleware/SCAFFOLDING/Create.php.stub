namespace Modules\$STUDLY_NAME$\Http\Middleware\Fooos;
use Closure;
use Log;

class Create {

    public function handle($request, Closure $next) {

        //frontend
        $this->fronteEnd();

        //check user permission
        if (auth()->user()->is_team) {
            if (auth()->user()->role->module->$LOWER_NAME$ == 'manage') {      
                return $next($request);
            }
        }

        abort(403);
    }

    /*
     * various frontend and visibility settings
     */
    private function fronteEnd() {

        //set dom element visibility (optional)
        config([
            'visibility.foo_bar_ement' => true
        ]);

    }
}
