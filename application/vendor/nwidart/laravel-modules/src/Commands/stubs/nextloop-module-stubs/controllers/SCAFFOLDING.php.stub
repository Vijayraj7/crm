namespace Modules\$STUDLY_NAME$\Http\Controllers;

use App\Http\Controllers\Controller;
use Modules\$STUDLY_NAME$\Http\Responses\Fooos\IndexResponse;
use Modules\$STUDLY_NAME$\Http\Responses\Fooos\CreateResponse;
use Modules\$STUDLY_NAME$\Http\Responses\Fooos\StoreResponse;
